<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/drawer_item_bg">
    <ImageView
        android:id="@id/drawer_profile_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/takayamaleaves"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@id/drawer_profile_img"
        android:layout_alignTop="@id/drawer_profile_img"
        android:background="@drawable/round_corners" />

    <TextView
        android:id="@id/drawer_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_profile_img"
        android:textColor="@color/white"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        android:text="Eric"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@id/drawer_profile_name"
        android:layout_below="@id/drawer_profile_name"
        android:text="5 remaining session(s)"/>
</RelativeLayout>